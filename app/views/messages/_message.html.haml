.main-ber__chat-spaces-space{data: {message: {id: message.id}}}
  %p.main-ber__chat-spaces-space-user
    = message.user.name
  %p.main-ber__chat-spaces-space-time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-ber__chat-spaces-lower
  - if message.content.present?
    %p.main-ber__chat-spaces-space-text
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
